<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <AssemblyName>Trinity.FFI</AssemblyName>
    <RootNamespace>Trinity.FFI</RootNamespace>
    <AllowUnsafe>true</AllowUnsafe>
    <PackageId>GraphEngine.FFI</PackageId>
    <Authors>Microsoft Graph Engine Team</Authors>
    <Company>Microsoft Corporation</Company>
    <Product>GraphEngine.FFI</Product>
    <Description>GraphEngine foreign function interface</Description>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://www.graphengine.io</PackageProjectUrl>
    <PackageIconUrl>https://www.graphengine.io/img/logo-64x64.png</PackageIconUrl>
    <PackageLicenseUrl>https://github.com/Microsoft/GraphEngine/blob/master/LICENSE.md</PackageLicenseUrl>
    <Copyright>Copyright 2018</Copyright>
    <Version>2.0.9328</Version>
    <RepositoryUrl>https://github.com/Microsoft/GraphEngine/</RepositoryUrl>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GraphEngine.Core" Version="2.0.9328" />
    <PackageReference Include="GraphEngine.Jit" Version="2.0.9328" />
    <PackageReference Include="GraphEngine.Storage.Composite" Version="2.0.9328" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <TslCodegen Include="**/*.tsl" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="$(OutputPath)\trinity_host.dll">
      <PackagePath>runtimes\win-x64\native</PackagePath>
    </Content>
    <Content Include="$(OutputPath)\trinity_ffi.dll">
      <PackagePath>runtimes\win-x64\native</PackagePath>
    </Content>
    <Content Include="$(OutputPath)\libtrinity_host.so">
      <PackagePath>runtimes\linux-x64\native</PackagePath>
    </Content>
    <Content Include="$(OutputPath)\libtrinity_ffi.so">
      <PackagePath>runtimes\linux-x64\native</PackagePath>
    </Content>

    <Content Include="$(OutputPath)\trinity_ffi.lib" Link="trinity_ffi.lib">
      <PackagePath>runtimes\win-x64\native</PackagePath>
    </Content>
    <Content Include="$(OutputPath)\Trinity.lib" Link="Trinity.lib">
      <PackagePath>runtimes\win-x64\native</PackagePath>
    </Content>

    <Content Include="..\..\GraphEngine.Jit\GraphEngine.Jit.Native\CellAccessor.h" Link="CellAccessor.h">
      <PackagePath>content\include</PackagePath>
    </Content>
    <Content Include="..\Trinity.FFI.Native\swig_accessor.h" Link="swig_accessor.h">
      <PackagePath>content\include</PackagePath>
    </Content>
    <Content Include="..\..\..\Trinity.C\include\*.h">
      <PackagePath>content\include</PackagePath>
    </Content>
    <Content Include="..\..\..\Trinity.C\include\os\**\*.h">
      <PackagePath>content\include\os</PackagePath>
    </Content>
    <Content Include="..\..\..\Trinity.C\include\arch\**\*.h">
      <PackagePath>content\include\arch</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Trinity.FFI.Metagen\Trinity.FFI.Metagen.fsproj" />
  </ItemGroup>

</Project>
